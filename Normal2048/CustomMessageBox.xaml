<Window x:Class="Normal2048.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Message}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="New Game" Width="80" Height="30" Margin="5" Click="NewGameButton_Click"/>
            <Button Content="Exit" Width="80" Height="30" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
